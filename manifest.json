{
  "manifest_version": 3,
  "name": "Multi App Cookie Manager",
  "version": "1.1",
  "description": "Simpan dan gunakan cookie dari berbagai aplikasi.",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "https://*.twitter.com/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/default.png"
  }
}
